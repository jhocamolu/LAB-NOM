<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.alcanosesp.appalcanos.ui.menulateral.consultas.ingresos_retenciones.CertificadoRetencionesFragment">

        <include
            android:id="@+id/pb_Retenciones"
            layout="@layout/progress_bar"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rlItemRetenciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible">


            <ImageView
                android:id="@+id/imagen_principal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/datos_basicos_item_rv_bg"
                android:padding="15dp"
                android:src="@drawable/ic_description"
                android:tint="@color/blanco" />

            <TextView
                android:id="@+id/tvDescripcionCertificadoRetenciones"
                style="@style/InfoBasicaTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imagen_principal"
                android:fontFamily="@font/muli_regular"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:text="@string/app_name"
                android:textAlignment="inherit"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="110dp"
                android:background="#bbbbbb" />

        </RelativeLayout>


    </RelativeLayout>
</layout>
