<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rlcertificadoLaboral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/imagen_principal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:tint="@color/blanco"
            android:background="@drawable/datos_basicos_item_rv_bg"
            android:src="@drawable/ic_account_box"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/descripcion"
            style="@style/InfoBasicaTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:layout_toRightOf="@id/imagen_principal"
            android:layout_toLeftOf="@id/ivCertificadoLaboralSescargar"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textSize="14sp"
            android:textAlignment="inherit"
            android:fontFamily="@font/muli_regular"
            />


        <ImageView
            android:id="@+id/ivCertificadoLaboralSescargar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_photo_camera"
            android:tint="@color/gris"
            android:layout_alignParentRight="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/descripcion"
            android:layout_marginTop="90dp"
            android:background="#bbbbbb" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
